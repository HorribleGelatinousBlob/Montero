{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wallet",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/build/dev/debug/bin/montero-wallet-cli",
            "args": [
                "--testnet",
            ],
            "stopAtEntry": false,
            
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "Testnet",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/build/dev/debug/bin/monterod",
            "args": [
                "--testnet", "--create-genesis-tx"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Stagenet-Node-1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/build/dev/debug/bin/monterod",
            "args": [
                "--stagenet",
                "--data-dir", "${workspaceFolder}/db/n1",
                "--fixed-difficulty", "250",
                "--p2p-bind-port", "28080", 
                "--rpc-bind-port", "28081", 
                "--zmq-rpc-bind-port", "28082", 
                "--rpc-restricted-bind-port", "28083",
                "--add-exclusive-node", "127.0.0.1:38080",
