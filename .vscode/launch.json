            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builder/build/dev/debug/bin/montero-wallet-cli",
            "args": [
                "--stagenet",
                "--daemon-address", "127.0.0.1:28081",
                "--wallet-file", "${workspaceFolder}/t1",
